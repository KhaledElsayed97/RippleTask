<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/recycler_view_dest">

    <fragment
        android:id="@+id/recycler_view_dest"
        android:name="com.example.ripplerepotask.ui.main.view.RecyclerViewFragment"
        android:label="fragment_recycler_view"
        tools:layout="@layout/fragment_recycler_view" >
        <action
            android:id="@+id/next_action"
            app:destination="@id/repo_details_dest" />
    </fragment>
    <fragment
        android:id="@+id/repo_details_dest"
        android:name="com.example.ripplerepotask.ui.main.view.RepoDetailsFragment"
        android:label="fragment_repo_details"
        tools:layout="@layout/fragment_repo_details">
        <argument
            android:name="repoName"
            app:argType="string"
           />
        <argument
            android:name="repoDesc"
            app:argType="string"
            />
        <argument
            android:name="repoImage"
            app:argType="string"
            />
    </fragment>
</navigation>